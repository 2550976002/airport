  height: 80rpx;
  width: 100%;
  background-color: rgb(236, 237, 238);
  text-align: center;
  position: absolute;
}

.btns-refresh{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 10px 8px 10px 8px;
  line-height: 40px;
  border-radius: 6px;
  text-align: center;
  color: rgb(255, 255, 255);
  background: rgb(39, 196, 0);
}


.arealist{
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 80rpx;
  width: 100%;
}

.item{
  margin-bottom: 5px;
  padding: 5px;
  border-bottom: 1px solid #ccc;
}

.location_name{
  font-size: 17px;
